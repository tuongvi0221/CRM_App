<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/bottomhoatdong"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="2000dp"
    android:orientation="vertical"
    android:background="@drawable/bottomsheet_rounded_top"
    android:padding="16dp">

    <!-- Header: Tên hoạt động + Cancel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cuộc gọi"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/ic_cancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_cancel"
            android:contentDescription="Cancel"/>
    </LinearLayout>

    <!-- Tab hoạt động -->
    <LinearLayout
        android:id="@+id/tab_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="30dp">

        <ImageView
            android:id="@+id/ic_call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/rounded_input_box_small"
            android:src="@drawable/ic_call"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/ic_meeting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="150dp"
            android:background="@drawable/rounded_input_box_small"
            android:src="@drawable/ic_meeting"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <!-- Fragment container -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Bottom thông tin -->
    <LinearLayout
        android:id="@+id/bottomthongtin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:padding="8dp">

        <!-- Thông tin -->
        <LinearLayout
            android:id="@+id/thongtin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="8dp">

            <!-- Người phụ trách -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ic_face2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_face2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/nguoiphutrach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nguoiphutrach"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/tennguoiphutrach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Minh Hà"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>
            </LinearLayout>

            <!-- Thời gian -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/titlethoigian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bắt đầu - Kết thúc"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_small" />

                <!-- Thời gian bắt đầu -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/ngaybatdau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15-11-2025"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/giobatdau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:15"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <!-- Thời gian kết thúc -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/ngayketthuc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15-11-2025"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/gioketthuc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:30"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Trạng thái + Lưu -->
        <LinearLayout
            android:id="@+id/bottomtrangthai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="8dp">

            <TextView
                android:id="@+id/trangthai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lên kế hoạch"
                android:textColor="@color/xanhbutton"
                android:textSize="@dimen/text_small" />

            <Button
                android:id="@+id/btnLuu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="100dp"
                android:text="Lưu"
                android:backgroundTint="@color/xanhbutton"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

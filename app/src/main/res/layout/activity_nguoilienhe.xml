<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- ðŸ”¹ PHáº¦N Cá» Äá»ŠNH (HEADER + THÃ”NG TIN CÆ  Báº¢N) -->
    <ScrollView
        android:id="@+id/headerScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header vá»›i nÃºt back -->
            <LinearLayout
                android:id="@+id/chitietnguoilienhe_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_back" />

                <TextView
                    android:id="@+id/chitietnguoilienhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chitietnguoilienhe"
                    android:textSize="@dimen/text_large"
                    android:layout_marginStart="8dp"/>

                <!-- arrow_left -->
                <ImageView
                    android:id="@+id/ic_left"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/rounded_input_box_small"
                    android:src="@drawable/ic_arrow_left"
                    android:scaleType="centerInside"
                    android:layout_marginStart="40dp"/>

                <!-- arrow_right -->
                <ImageView
                    android:id="@+id/ic_right"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/rounded_input_box_small"
                    android:src="@drawable/ic_arrow_right"
                    android:scaleType="centerInside"
                    android:layout_marginStart="8dp"/>

                <!-- edit -->
                <ImageView
                    android:id="@+id/ic_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/rounded_input_box_small"
                    android:src="@drawable/ic_edit"
                    android:scaleType="centerInside"
                    android:layout_marginStart="8dp"/>

                <!-- more -->
                <ImageView
                    android:id="@+id/ic_more"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/rounded_input_box_small"
                    android:src="@drawable/ic_three_point"
                    android:scaleType="centerInside"
                    android:layout_marginStart="8dp"/>



            </LinearLayout>



            <!-- Contact -->
            <LinearLayout
                android:id="@+id/nguoilienhe_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_basex3"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ic_contact"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_contact" />

                <TextView
                    android:id="@+id/tennguoilienhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- SDT + Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_basex3">

                <!-- Sá»‘ Ä‘iá»‡n thoáº¡i -->
                <LinearLayout
                    android:id="@+id/sdt_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/sodienthoai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sá»‘ Ä‘iá»‡n thoáº¡i"
                        android:textSize="@dimen/text_small"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:id="@+id/ic_phone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_call" />
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:id="@+id/email_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="@dimen/text_small"
                        android:layout_marginStart="48dp"/>

                    <ImageView
                        android:id="@+id/ic_mail"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_mail" />
                </LinearLayout>
            </LinearLayout>

            <!-- CÃ´ng ty -->
            <TextView
                android:id="@+id/rowcongty"
                android:layout_marginTop="@dimen/margin_basex3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text="@string/congty"
                android:layout_marginStart="8dp"/>

            <!-- NgÆ°á»i táº¡o , ngÆ°á»i phá»¥ trÃ¡ch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <!-- NgÆ°á»i táº¡o -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ic_face"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_face" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/nguoitao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nguoitao"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/tennguoitao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nguyá»…n Thá»‹ TÃº VÃ¢n"
                            android:textSize="@dimen/text_small" />
                    </LinearLayout>
                </LinearLayout>

                <!-- NgÆ°á»i phá»¥ trÃ¡ch -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ic_face2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_face2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/nguoiphutrach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nguoiphutrach"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/text_small" />

                        <TextView
                            android:id="@+id/tennguoiphutrach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nguyá»…n Minh HÃ "
                            android:textSize="@dimen/text_small" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”¹ TAB NAVIGATION -->
    <LinearLayout
        android:id="@+id/tab_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tab_tongquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tá»•ng quan"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tab_chitiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiáº¿t"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:padding="8dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tab_hoatdong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoáº¡t Ä‘á»™ng"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:padding="8dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tab_cohoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÆ¡ há»™i"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:padding="8dp"

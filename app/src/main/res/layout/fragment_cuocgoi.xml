<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Thông tin chung với mũi tên -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/thongtinchung"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ic_arrow_up"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/black"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:layout_marginStart="@dimen/margin_base"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutThongTinChung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_base">

                <!-- Tiêu đề -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/layouttieude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_basex2"
                    android:hint="@string/tieude"
                    android:background="@drawable/rounded_input_box">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edttieude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:paddingStart="@dimen/margin_base"
                        android:paddingEnd="@dimen/margin_base"
                        android:background="@android:color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mô tả -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutttmota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mota"
                    android:background="@drawable/rounded_input_box"
                    android:layout_marginTop="@dimen/margin_basex2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtmota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:gravity="top|start"
                        android:paddingStart="@dimen/margin_base"
                        android:paddingEnd="@dimen/margin_base"
                        android:paddingTop="@dimen/padding_vertical_small"
                        android:paddingBottom="@dimen/padding_vertical_small"
                        android:textSize="@dimen/text_small"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Người dùng được mời -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Người dùng được mời"
                    android:background="@drawable/rounded_input_box"
                    android:layout_marginTop="@dimen/margin_base"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/actnguoidung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="@dimen/text_small"
                        android:paddingStart="@dimen/margin_base"
                        android:background="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Khách hàng với mũi tên -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Khách hàng"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ic_arrow_customer"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:layout_marginStart="@dimen/margin_base"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutKhachHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_base">

                <!-- Tổ chức -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_base">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Công ty"
                        android:background="@drawable/rounded_input_box"
                        app:endIconMode="dropdown_menu">

                        <AutoCompleteTextView
                            android:id="@+id/actcongty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="@dimen/text_small"
                            android:paddingStart="@dimen/margin_base"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/ic_themcongty"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/black"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_add"/>
                </LinearLayout>

                <!-- Cá nhân -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_base">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Cá nhân"
                        android:background="@drawable/rounded_input_box"
                        app:endIconMode="dropdown_menu">

                        <AutoCompleteTextView
                            android:id="@+id/actcanhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="@dimen/text_small"
                            android:paddingStart="@dimen/margin_base"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/ic_themcanhan"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/black"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_add"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Liên quan đến -->
            <!-- Cơ hội liên quan với mũi tên -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cơ hội liên quan"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ic_arrow_opportunity"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:layout_marginStart="@dimen/margin_base"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCoHoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_base">

                <!-- Cơ hội -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_base">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Cơ hội"
                        android:background="@drawable/rounded_input_box"
                        app:endIconMode="dropdown_menu">

                        <AutoCompleteTextView
                            android:id="@+id/actcohoi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="@dimen/text_small"
                            android:paddingStart="@dimen/margin_base"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/ic_themcohoi"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:tint="@color/black"
                        android:src="@drawable/ic_add"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- ScrollView chứa toàn bộ nội dung -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ==================== THÔNG TIN CHUNG ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <TextView
                    android:id="@+id/thongtinchung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtinchung"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical|start"
                    android:layout_marginBottom="@dimen/margin_basex2" />


                <LinearLayout
                    android:id="@+id/layoutThongTinChung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                <!-- Họ và tên đệm -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/hovatendem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hovatendem"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/fillhovatendem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Trần Ngọc Diễm"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>

                <!-- Tên -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/ten"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ten"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/fillten"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>

                <!-- Ngày sinh -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/ngaysinh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ngaysinh"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/fillngaysinh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="19/02/1994"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>

                <!-- Công ty -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/congty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/congty"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/fillcongty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Công ty TNHH Vạn Phát"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>

                <!-- Điện thoại -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/dienthoai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/didong"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/filldienthoai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0909123456"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/email"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/fillemail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="vi.phan@gmail.com"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

            <!-- ==================== THÔNG TIN ĐỊA CHỈ ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <TextView
                    android:id="@+id/thongtindiachi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="@string/thongtindiachi"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@drawable/ic_arrow_drop_down" />

                <LinearLayout
                    android:id="@+id/layoutThongTinDiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                <TextView
                    android:id="@+id/diachi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diachi"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_small"
                    android:layout_marginTop="@dimen/margin_basex3"/>

                <TextView
                    android:id="@+id/filldiachi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="442 Lê Quang Định"
                    android:textSize="@dimen/text_small"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/quanhuyen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/quan"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/fillquanhuyen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gò Vấp"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/tinhtp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tinh"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/filltinhtp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TP. Hồ Chí Minh"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

            <!-- ==================== THÔNG TIN MÔ TẢ ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <TextView
                    android:id="@+id/thongtinmota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="@string/thongtinmota"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@drawable/ic_arrow_drop_down" />

                <LinearLayout
                    android:id="@+id/layoutThongTinMoTa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                <TextView
                    android:id="@+id/mota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mota"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_small"
                    android:layout_marginTop="@dimen/margin_basex3"/>

                <TextView
                    android:id="@+id/fillmota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit..."
                    android:textSize="@dimen/text_small"/>

                <TextView
                    android:id="@+id/ghichu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ghichu"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_small"
                    android:layout_marginTop="@dimen/margin_basex3"/>

                <TextView
                    android:id="@+id/fillghichu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit..."
                    android:textSize="@dimen/text_small"/>
            </LinearLayout>

            <!-- ==================== THÔNG TIN MUA HÀNG ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <TextView
                    android:id="@+id/thongtinmuahang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtinmuahang"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/tinhtrangmuahang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tinhtrangmuahang"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/filltinhtrangmuahang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đã mua"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/sodonhang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sodonhangdamua"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/fillsodonhang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>

            <!-- ==================== THÔNG TIN QUẢN LÝ ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <TextView
                    android:id="@+id/thongtinquanly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtinquanly"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/giaocho"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giao cho"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/fillgiaocho"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nguyễn Minh Hà"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/nguoiphutrach"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/nguoiphutrach"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/fillnguoiphutrach"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nguyễn Minh Hà"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>
            </LinearLayout>

            <!-- ==================== THÔNG TIN HỆ THỐNG ==================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <TextView
                    android:id="@+id/thongtinhethong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtinhethong"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/ngaytao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ngaytao"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/fillngaytao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="21/02/2004"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/ngaysua"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ngaysua"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small"/>

                    <TextView
                        android:id="@+id/fillngaysua"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="22/03/2004"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

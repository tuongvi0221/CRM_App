<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_root_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Scrollable form -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section title -->
            <TextView
                android:id="@+id/thongtinnguoilienhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thongtin"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_basex2"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingEnd="8dp" />

        <LinearLayout
            android:id="@+id/layoutThongTinNguoiLienHeChiTiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


        <!-- Row danh xưng + họ và tên đệm -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_basex2"
                android:weightSum="2">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="@string/danhxung"
                    android:background="@drawable/rounded_input_box"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/actdanhxung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="@dimen/text_small"
                        android:paddingStart="@dimen/margin_basex2"
                        android:paddingEnd="@dimen/margin_base"
                        android:background="@android:color/transparent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hovatendem"
                    android:background="@drawable/rounded_input_box">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edthovatendem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small"
                        android:paddingStart="@dimen/margin_base"
                        android:paddingEnd="@dimen/margin_base"
                        android:background="@android:color/transparent"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Tên -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/layoutten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_basex2"
                android:hint="@string/ten"
                android:background="@drawable/rounded_input_box">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Công ty -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_basex2"
                android:hint="@string/congty"
                android:background="@drawable/rounded_input_box"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/actCongTy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textSize="@dimen/text_small"
                    android:paddingStart="@dimen/margin_basex2"
                    android:paddingEnd="@dimen/margin_base"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Giới tính -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_basex2"
                android:hint="@string/gioitinh"
                android:background="@drawable/rounded_input_box"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/actgioitinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textSize="@dimen/text_small"
                    android:paddingStart="@dimen/margin_basex2"
                    android:paddingEnd="@dimen/margin_base"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Di động -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_basex2"
                android:hint="@string/didong"
                android:background="@drawable/rounded_input_box">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtdidong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_basex2"
                android:hint="@string/email"
                android:background="@drawable/rounded_input_box">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ngày sinh -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_basex2"
                android:hint="@string/ngaysinh"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_calendar"
                android:background="@drawable/rounded_input_box">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtngaysinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_small"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- padding bottom so last field not hidden by buttons -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



